# All aliases are here
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias agi='sudo apt-get install'
alias agp='sudo apt-get purge'
alias agu='sudo apt-get update && sudo apt-get upgrade'
alias ag='sudo apt-get'

alias c='clear'
alias h='history'
alias q='exit'
alias quit='q'
alias a='alias'
alias t='gnome-terminal'

alias poweroff='sudo /sbin/poweroff'
alias reboot='/sbin/reboot'
alias rb='reboot'
alias restart='reboot'
alias rs='reboot'
alias sd='shutdown'
alias shutdown='sudo /sbin/shutdown'
alias sleep='systemctl suspend'

alias rmd='rm -rf'
alias untar='tar -zxvf'
alias open='xdg-open'

# Tmux
alias hs='tmux hsplit'
alias vs='tmux vsplit'

alias eb='vim ~/.bashrc'
alias sb='source ~/.bashrc'
alias ea='vim ~/.bash_aliases'
alias sa='source ~/.bash_aliases'
alias ev='vim ~/.vimrc'
alias ei='vim ~/.i3/config'
alias et='vim ~/.tmux.conf'

# Monitor layouts
alias dupl="~/.screenlayouts/duplicate.sh"
alias def="~/.screenlayouts/default.sh"
alias game="~/.screenlayouts/gaming.sh"

alias ip='/usr/sbin/arp -a'
alias ipd='/sbin/route'
